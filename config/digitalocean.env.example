# DigitalOcean Configuration
# Copy this file to .env and fill in your actual values

# DigitalOcean Database (Managed PostgreSQL)
# Replace with your DigitalOcean Managed PostgreSQL connection string
DO_DATABASE_URL=postgresql://username:password@your-db-cluster.db.ondigitalocean.com:25060/defaultdb?sslmode=require

# DigitalOcean Spaces (S3-compatible object storage)
# Replace with your actual DigitalOcean Spaces configuration
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
DO_SPACES_BUCKET=your-bucket-name
DO_SPACES_ACCESS_KEY=your-access-key
DO_SPACES_SECRET_KEY=your-secret-key
DO_SPACES_REGION=nyc3

# DigitalOcean Functions
# Replace with your actual function endpoints
DO_FUNCTION_DOCUMENT_PROCESSOR=https://faas-nyc1-xxxxxxxxx.doserverless.co/api/v1/web/fn-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx/document-processor
DO_FUNCTION_NOTIFICATION_SENDER=https://faas-nyc1-xxxxxxxxx.doserverless.co/api/v1/web/fn-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx/notification-sender

# DigitalOcean Managed Redis
DO_REDIS_URL=rediss://default:password@redis-cluster.db.ondigitalocean.com:25061

# Application Configuration
JWT_SECRET=your-jwt-secret-key-change-in-production
API_BASE_URL=https://your-app.ondigitalocean.app

# Service URLs (for DigitalOcean App Platform deployment)
ETA_SERVICE_URL=https://eta-service.ondigitalocean.app
APPOINTMENT_SERVICE_URL=https://appointment-service.ondigitalocean.app
YARD_SERVICE_URL=https://yard-management-service.ondigitalocean.app
GEOFENCE_SERVICE_URL=https://geofence-service.ondigitalocean.app
DMS_SERVICE_URL=https://dms-service.ondigitalocean.app

# Email Service (using DigitalOcean recommended services)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key

# SMS Service (Twilio integration)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
